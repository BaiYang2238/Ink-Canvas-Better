<Window x:Class="CustomControlTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:icb="ICBCustomControlLibrary"
        xmlns:local="clr-namespace:CustomControlTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Name="Button0" Width="60" Height="20" Click="Button_Click">Button</Button>
        <icb:Subpanel x:Name="subpanel"
                      AllowsTransparency="True"
                      Title="Test Subpanel"
                      PlacementTarget="{Binding ElementName=Button0}"
                      StaysOpen="True">
            <TextBlock>123</TextBlock>
        </icb:Subpanel>
    </Grid>
</Window>
