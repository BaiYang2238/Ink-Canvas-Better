<Window x:Class="CustomControlTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:icb="ICBCustomControlLibrary"
        xmlns:local="clr-namespace:CustomControlTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Width="60" Height="20" Click="Button_Click">Button</Button>
        <icb:Subpanel x:Name="subpanel" Title="Test Subpanel" Width="200" Height="200" Background="LightGray" BorderBrush="Black" BorderThickness="1" PlacementTarget="{Binding ElementName=Button}" StaysOpen="False">
            <TextBlock Text="This is a test subpanel." VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </icb:Subpanel>
    </Grid>
</Window>
