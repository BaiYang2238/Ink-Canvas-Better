<UserControl x:Class="Ink_Canvas_Better.Controls.ICB_Button"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ink_Canvas_Better.Controls"
             xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
             mc:Ignorable="d" 
             Padding="0">
    <Border
        BorderBrush="{DynamicResource BorderBrush}"
        Width="64"
        Height="64"
        Name="Border"
        Background="{DynamicResource DefaultBackgroundColor_Opacity}">
        <Button
            Width="58"
            Height="58"
            Name="InnerButton"
            Padding="0"
            BorderThickness="0"
            Background="{x:Null}"
            HorizontalAlignment="Center">
            <ikw:SimpleStackPanel
                HorizontalAlignment="Center"
                Background="Transparent"
                Orientation="Vertical">
                <ikw:SimpleStackPanel
                    Name="SimpleStackPanel_1"
                    Width="58"
                    Height="38"
                    HorizontalAlignment="Center"
                    Background="Transparent"
                    Orientation="Vertical">
                    
                </ikw:SimpleStackPanel>
                <TextBlock
                    Height="20"
                    Name="TextBox_1"
                    FontSize="12"
                    Foreground="{DynamicResource DefaultForegroundColor}"
                    Text="Button"
                    TextAlignment="Center"/>
            </ikw:SimpleStackPanel>

        </Button>

    </Border>
    
</UserControl>
