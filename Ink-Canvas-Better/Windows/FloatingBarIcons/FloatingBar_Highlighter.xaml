<UserControl x:Class="Ink_Canvas_Better.Windows.FloatingBarIcons.FloatingBar_Highlighter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ink_Canvas_Better.Windows.FloatingBarIcons"
             xmlns:localControls="clr-namespace:Ink_Canvas_Better.Controls"
             xmlns:text="clr-namespace:Ink_Canvas_Better.Properties"
             xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
             xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
             mc:Ignorable="d">
    <!-- Content -->
    <ikw:SimpleStackPanel>
        <DockPanel Height="64">
            <Grid Width="60" DockPanel.Dock="Right">
                <Rectangle Name="ColorPreview" Width="1" Height="{Binding ElementName=Slider_StrokeThickness, Path=Value}" Fill="Black"></Rectangle>
            </Grid>
            <ikw:SimpleStackPanel Orientation="Horizontal" Spacing="5" DockPanel.Dock="Top" VerticalAlignment="Top">
                <TextBlock TextAlignment="Center" Text="{DynamicResource Text_Thickness}" VerticalAlignment="Center" FontSize="16" Foreground="{DynamicResource DefaultForegroundColor}"/>
                <Slider VerticalAlignment="Center"
                            Name="Slider_StrokeThickness"
                            Width="260"
                            IsSnapToTickEnabled="True"
                            Minimum="1"
                            Maximum="40"
                            IsMoveToPointEnabled="True"
                            TickFrequency="1"
                            TickPlacement="Both"
                            Value="30"
                            ValueChanged="Slider_StrokeThickness_ValueChanged"/>
                <TextBlock TextAlignment="Center" Text="{Binding Value, ElementName=Slider_StrokeThickness}" VerticalAlignment="Center" FontSize="16" Width="24" Foreground="{DynamicResource DefaultForegroundColor}"/>
            </ikw:SimpleStackPanel>
            <ikw:SimpleStackPanel Orientation="Horizontal" Spacing="5" DockPanel.Dock="Top" VerticalAlignment="Top">
                <TextBlock TextAlignment="Center" Text="{DynamicResource Text_Alpha}" VerticalAlignment="Center" FontSize="16" Foreground="{DynamicResource DefaultForegroundColor}"/>
                <Slider VerticalAlignment="Center"
                            Name="Slider_Alpha"
                            Width="260"
                            IsSnapToTickEnabled="True"
                            Minimum="1"
                            Maximum="99"
                            IsMoveToPointEnabled="True"
                            TickFrequency="1"
                            TickPlacement="Both"
                            Value="40"
                            ValueChanged="Slider_Alpha_ValueChanged"/>
                <TextBlock TextAlignment="Center" VerticalAlignment="Center" FontSize="16" Width="48" Foreground="{DynamicResource DefaultForegroundColor}">
                        <Run Text="{Binding Value, ElementName=Slider_Alpha}"/>
                        <Run Text="%"/>
                </TextBlock>
            </ikw:SimpleStackPanel>
        </DockPanel>
        <!-- function (TODO) -->
        <WrapPanel Orientation="Horizontal" Visibility="Collapsed">
            <ui:ToggleSplitButton Margin="2" Visibility="Collapsed">
                <!-- TODO -->
                <ikw:SimpleStackPanel>
                    <TextBlock Text="{DynamicResource Text_InkToShape}"/>
                    <TextBlock>Mode</TextBlock>
                    <!-- TODO:Mode -->
                </ikw:SimpleStackPanel>
            </ui:ToggleSplitButton>
            <ToggleButton Margin="2" Name="ToggleButton_inkStyle" Checked="ToggleButton_inkStyle_Checked" Unchecked="ToggleButton_inkStyle_Unchecked">
                <ikw:SimpleStackPanel>
                    <TextBlock TextAlignment="Center" Text="{DynamicResource Text_InkStyle}"/>
                    <TextBlock TextAlignment="Center" Text="{DynamicResource Text_Off}" Name="inkstyleTextBlock"/>
                </ikw:SimpleStackPanel>
            </ToggleButton>
        </WrapPanel>
        <!-- Color -->
        <ikw:SimpleStackPanel Orientation="Horizontal">
            <localControls:ICB_CustomColor Color="Red" x:Name="Color0"/>
            <localControls:ICB_CustomColor Color="Yellow" x:Name="Color1"/>
            <localControls:ICB_CustomColor Color="Blue" x:Name="Color2"/>
            <localControls:ICB_CustomColor Color="Green" x:Name="Color3"/>
            <localControls:ICB_CustomColor Color="Black" x:Name="Color4"/>
            <localControls:ICB_CustomColor Color="White" x:Name="Color5"/>
        </ikw:SimpleStackPanel>
        <ikw:SimpleStackPanel Orientation="Horizontal">
            <localControls:ICB_CustomColor Color="LightCoral" x:Name="Color6"/>
            <localControls:ICB_CustomColor Color="Wheat" x:Name="Color7"/>
            <localControls:ICB_CustomColor Color="LightBlue" x:Name="Color8"/>
            <localControls:ICB_CustomColor Color="lightGreen" x:Name="Color9"/>
            <localControls:ICB_CustomColor Color="DimGray" x:Name="Color10"/>
            <ToggleButton Padding="0" Width="64" Height="64" Checked="ToggleButton_CustomColor_Checked" Unchecked="ToggleButton_CustomColor_Unchecked">
                <ui:IconAndText Name="IconAndText_CustomizeColor" Content="{DynamicResource Text_Customize}" FontSize="10" Icon="{x:Static ui:SegoeFluentIcons.Color}" Orientation="Vertical"/>
            </ToggleButton>
        </ikw:SimpleStackPanel>
    </ikw:SimpleStackPanel>
</UserControl>
