<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="FloatBarBackground" Color="Black" Opacity="0.6"/>
    <SolidColorBrush x:Key="FloatBarTitleBackground" Color="#2156c9" Opacity="0.75"/>
    <SolidColorBrush x:Key="FloatBarBorderBrush" Color="White" Opacity="0.6"/>
    <SolidColorBrush x:Key="FloatBarForeground" Color="White"/>
    <Color x:Key="FloatBarForegroundColor">#FFcccccc</Color>

    <Color x:Key="FloatBarButtonBackgroundKey">Transparent</Color>
    <Color x:Key="FloatBarButtonBackgroundPointerOverKey">#3300CDCD</Color>
    <Color x:Key="FloatBarButtonButtonBackgroundPressedKey">#6600CDCD</Color>
</ResourceDictionary>